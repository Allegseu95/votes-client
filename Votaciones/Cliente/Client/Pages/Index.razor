@using Cliente.Client.Shared.Components
@inherits LayoutComponentBase
@page "/"

<PageTitle>InicioVS</PageTitle>

<AuthorizeView>
    <Authorized>
        <RedirectObservador />
    </Authorized>

    <NotAuthorized>
        <MudText Typo="Typo.h3" Align="Align.Center" Class="mt-10">Bienvenido/a!</MudText>

        <MudText Typo="Typo.body1" Align="Align.Center">A la aplicación de Registro de Votos</MudText>

        <MudPaper Class="d-flex flex-column flex-grow-1 gap-4 py-5 px-10 mt-10" Elevation="0">
            <MudButton Href="/observador/listado"
                       Variant="Variant.Outlined"
                       EndIcon="@Icons.Material.Filled.Login"
                       Color="Color.Tertiary">
                Inicia Sesión
            </MudButton>

            <MudButton Href="authentication/register"
                       Variant="Variant.Filled"
                       EndIcon="@Icons.Material.Filled.AppRegistration"
                       Color="Color.Tertiary">
                Regístrate
            </MudButton>
        </MudPaper>
    </NotAuthorized>
</AuthorizeView>
