@page "/fetchdata"
@inject HttpClient Http

<PageTitle>Actas de Escrutinio</PageTitle>

<MudText Typo="Typo.h1">Actas de Escrutinio (Base de Datos Local)</MudText>

<MudText Typo="Typo.body1">Sirve para demostrar la traida de datos desde el servicio</MudText>

@if (registro == null)
{
    <MudText Typo="Typo.caption">Cargando...</MudText>
}
else
{
    <MudTable Items="@registro" Hover="true">
        <HeaderContent>
            <MudTh>Votantes</MudTh>
            <MudTh>Blancos</MudTh>
            <MudTh>Nulos</MudTh>
            <MudTh>URL</MudTh>
            <MudTh>Presidente</MudTh>
            <MudTh>Secretario/a</MudTh>
            <MudTh>Estado</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd >@context.CantidadVotaciones</MudTd>
            <MudTd >@context.VotosBlancos</MudTd>
            <MudTd >@context.VotosNulos</MudTd>
            <MudTd >@context.Imagen</MudTd>
            <MudTd >@context.FirmaPresidente</MudTd>
            <MudTd >@context.FirmaSecretario</MudTd>
            <MudTd >@context.Estado</MudTd>
        </RowTemplate>
    </MudTable>
}



