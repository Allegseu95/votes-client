@page "/login"
@layout GeneralLayout


<MudPaper Class="pa-4 ma-4" Elevation="4">
    <MudText Typo="Typo.h6">Acceso</MudText>
    <MudText Typo="Typo.subtitle1">Inicia sesión para acceder al contenido de la aplicación desde cualquier rol.
    </MudText>
    <MudForm>
        <MudTextField T="string" Label="Email" Required="true" RequiredError="Email is required!" />

        <MudTextField T="string" Label="Password" HelperText="Choose a strong password" InputType="InputType.Password"
            Required="true" RequiredError="Password is required!" />

        <MudButton Href="inicio" Class="mt-4" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">
            INGRESAR
        </MudButton>
    </MudForm>
</MudPaper>