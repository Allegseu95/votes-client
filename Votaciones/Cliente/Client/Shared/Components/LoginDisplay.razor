@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Variant="Variant.Outlined" Color="Color.Error" Size="Size.Medium" @onclick="BeginSignOut" />
    </Authorized>

    <NotAuthorized>
        <MudIconButton Href="authentication/login" Icon="@Icons.Material.Filled.Login" Variant="Variant.Outlined" Color="Color.Dark" Size="Size.Medium" Class="mr-2" />
        <MudIconButton Href="authentication/register" Icon="@Icons.Material.Filled.AppRegistration" Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Medium" />
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}
