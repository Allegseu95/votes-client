@using Cliente.Client.Shared.Components
@inherits LayoutComponentBase
<MudThemeProvider Theme="@temaPersonalizado" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => AlternarDrawer())" />
        <MudText Typo="Typo.h6" Class="ml-3">Votaciones App</MudText>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerAbierto" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>